# Environment configuration for BrightHive Testing Infrastructure CDK
# Copy this file to .env and update the values as needed
# Settings are automatically loaded via pydantic-settings (no load_dotenv needed!)

# Application Environment (development, staging, production, testing)
ENVIRONMENT=development

# Debug Mode
DEBUG=false

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Security
SECRET_KEY=change-me-in-production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=*

# Cache Configuration (use double underscore for nested config)
CACHE__ENABLED=true
CACHE__TTL_SECONDS=300
CACHE__MAX_SIZE=1000


