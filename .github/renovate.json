{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "python": {
    "enabled": true
  },
  "pip_requirements": {
    "enabled": false
  },
  "labels": ["dependencies"],
  "schedule": ["before 6am on Monday"]
}
